<%= render 'books/userinfo', user: @user %>
<%= render 'books/newbook', book: @book %>

<div class="cover-user-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">ユーザー一覧</h1>
    </div>
    <div class="row justify-content-center">
      <% @users.each do |user| %>
      <div class="one-post card w-100">
        <p><%= user.name %></p>
        <%= link_to user_path(user) do %>
        <p class="caption h4">show</p>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>